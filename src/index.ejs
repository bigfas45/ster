  <script src="https://unpkg.com/dexie/dist/dexie.js"></script>

  <script type="text/javascript">
    const request =  fetch('http://146.190.228.236/api/control')
    request
    .then(data => {return data.json()})
    .then(res => {
      var db = new Dexie("ApplicationList");
      db.version(1).stores({
          appList: `
            appName,
            appURL,
            appRoute,
            appMenuName`
      });

    db.appList.bulkPut(res)

    localStorage.setItem('ApplicationList', JSON.stringify(res))
    })
  </script>

